
<p id="notice"><%= notice %></p>
<style>
 	.button_to {
 		display:inline-block;
 	}
</style>

<div class="row">
	<div class="span3">
		<div class ="affix">
			<div class="raw_links">
		<%= link_to "Graphs", @experiment, :class=>"btn" %> 
			<%= link_to "Excel", raw_data_path(@experiment, format: "xls"), :class => "btn"%> 
			</div>
			<h4>Jump to:</h4>
			<ul class="nav nav-pills nav-stacked ">
				<li><%= link_to "Temperature", "#raw_temp", :class =>"btn" %></li>
				<li><%= link_to "pH", "#raw_ph", :class => "btn" %></li>
				<li><%= link_to "DO", "#raw_do", :class => "btn" %></li>
				<li><%= link_to "Agitations", "#raw_agit", :class => "btn" %></li>
			</ul>
			<script>
			$('#navbar').affix()
			</script>
		</div>
	</div>
	<div class="span9">
		<div id="raw_temp" >
			<h3>Temperature</h3>
			<% if !@temperatures.empty? %>
				<table class="table table-striped table-bordered table-hover"> 
					<tr>
					    <th>Time</th>
					    <th>Value</th>
					    <th>Error</th>
					</tr>

				<% @temperatures.each do |temperature| %>
				  <tr>
				    <td><%= temperature.time %></td>
				    <td><%= temperature.value %></td>
				    <td><%= temperature.error %></td>
				  </tr>
				<% end %>
				</table>
			<% else %>
				No temperatures were recorded in this experiment.
			<% end %>
		</div>

		<div id="raw_ph">
			<h3>pH</h3>
			<% if !@pHs.empty? %>
				<table class="table table-striped table-bordered table-hover"> 
					<tr>
					    <th>Time</th>
					    <th>Value</th>
					    <th>Error</th>
					</tr>

				<% @pHs.each do |pH| %>
				  <tr>
				    <td><%= pH.time %></td>
				    <td><%= pH.value %></td>
				    <td><%= pH.error %></td>
				  </tr>
				<% end %>
				</table>
			<% else %> 
				No pHs were recorded this experiment.
			<% end %>
		</div>
		<div id="raw_do">
			<h3>DO</h3>
			<% if !@dissolvedOxygens.empty? %>
				<table class="table table-striped table-bordered table-hover"> 
					<tr>
					    <th>Time</th>
					    <th>Value</th>
					    <th>Error</th>
					</tr>

				<% @dissolvedOxygens.each do |oxygen| %>
				  <tr>
				    <td><%= oxygen.time %></td>
				    <td><%= oxygen.value %></td>
				    <td><%= oxygen.error %></td>
				  </tr>
				<% end %>
				</table>
			<% else %> 
				No DO readings were recorded this experiment. 
			<% end %>
		</div>
		<div id="raw_agit">
			<h3>Agitations</h3>
			<% if !@agitations.empty? %>
				<table class="table table-striped table-bordered table-hover"> 
					<tr>
					    <th>Time</th>
					    <th>Value</th>
					    <th>Error</th>
					</tr>

				<% @agitations.each do |agitation| %>
				  <tr>
				    <td><%= agitation.time %></td>
				    <td><%= agitation.value %></td>
				    <td><%= agitation.error %></td>
				  </tr>
				<% end %>
				</table>
			<% else %> 
				No agitation readings were recorded this experiment. 
			<% end %> 
		</div>
	</div>
</div>
<script>
var shiftWindow = function() { scrollBy(0, -50) };
if (location.hash) shiftWindow();
window.addEventListener("hashchange", shiftWindow);
</script>
<%= link_to 'Back', experiments_path %>
